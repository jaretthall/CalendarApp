# Azure AD Configuration
REACT_APP_AZURE_CLIENT_ID=
REACT_APP_AZURE_TENANT_ID=
REACT_APP_REDIRECT_URI=http://localhost:3000

# SharePoint Configuration
REACT_APP_SHAREPOINT_SITE_ID=
REACT_APP_SHAREPOINT_DRIVE_ID=
REACT_APP_SHAREPOINT_FOLDER_ID=

# SQL Database Configuration
REACT_APP_SQL_SERVER=
REACT_APP_SQL_DATABASE=
REACT_APP_SQL_USER=
REACT_APP_SQL_PASSWORD=
REACT_APP_SQL_PORT=1433
REACT_APP_SQL_ENCRYPT=true
REACT_APP_SQL_TRUST_SERVER_CERTIFICATE=false

# API Configuration
REACT_APP_API_BASE_URL=

# Feature Flags
# Set to true to enable SharePoint synchronization
REACT_APP_USE_SHAREPOINT_SYNC=false
# Set to true to use SQL database instead of local storage
REACT_APP_USE_SQL_DATABASE=false
# Set to true to use local storage for data persistence
REACT_APP_USE_LOCAL_STORAGE=true

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id
REACT_APP_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Feature Flags
REACT_APP_USE_FIRESTORE=true
REACT_APP_USE_LOCAL_STORAGE=false

# Note: Create a copy of this file named .env and fill in your actual values
# Do NOT commit the .env file to version control 